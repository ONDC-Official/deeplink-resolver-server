generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

enum TemplateStage {
  DRAFT
  REVIEW
  SUBMITTED
  PUBLISHED
}

model Template {
  id            String             @id @default(uuid())
  name          String?
  description   String?
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  value         Json
  category      UsecaseCategory?
  subCategory   UsecaseSubcategory?
  usecase       Usecase[]
  templateStage TemplateStage
}

enum UsecaseStage {
  DRAFT
  REVIEW
  SUBMITTED
  PUBLISHED
}

model Usecase {
  id           String       @id @default(uuid())
  template     Template     @relation(fields: [templateId], references: [id])
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  value        Json
  templateId   String
  name         String
  usecaseStage UsecaseStage
}

enum UsecaseCategory {
  RETAIL
  LOGISTICS
  MOBILITY
  SERVICES
}

enum UsecaseSubcategory {
  SEARCH_CATELOG
  SEARCH_BY_CITY
  SEARCH_BY_ITEM
  SEARCH_BY_CATEGORY
  OFFERS
}
